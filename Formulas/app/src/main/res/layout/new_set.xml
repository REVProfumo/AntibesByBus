<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:layout_weight=".2"
            android:layout_height="wrap_content"
            android:onClick="average"
            android:text="mean"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_weight=".2"
            android:layout_height="wrap_content"
            android:onClick="sigma"
            android:text="sigma"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_weight=".2"
            android:layout_height="wrap_content"
            android:text="plot"
            android:onClick="plot"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_weight=".2"
            android:layout_height="wrap_content"
            android:text="canc \nplot"
            android:onClick="cancel"
            />
        />
        <Button
            android:layout_width="wrap_content"
            android:layout_weight=".2"
            android:layout_height="wrap_content"
            android:text="save"
            android:id="@+id/save"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:id="@+id/new_formulas"
        >
        <Button
            android:textSize="30dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add"
            android:id="@+id/add"
            />
        <EditText
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/add_hint"
            android:id="@+id/add_hint"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/add"/>
        <ScrollView
            android:layout_weight="0.2"
            android:layout_width="match_parent"
            android:layout_below="@id/add_hint"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            >
            <TableLayout
                android:id="@+id/hints"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>
        </ScrollView>
        <LinearLayout
            android:layout_weight="0.2"
            android:id="@+id/hints3"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_below="@id/add_hint"
            android:layout_toRightOf="@id/hints"
            android:layout_alignParentRight="true"
            >
            <TextView
            android:layout_width="200dp"
                android:layout_weight="0.3"
            android:layout_height="wrap_content"
                android:textSize="40dp" android:layout_gravity="right"
                android:layout_marginRight="5dp"
                android:background="#FFFF0000"
                android:gravity="center"
                android:id="@+id/average"/>
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:gravity="center"
                android:text="Sigma\n" android:textSize="40dp"
                android:layout_gravity="right"
                android:layout_marginRight="5dp"
                android:background="#FFFFFF00"
                android:id="@+id/sigma"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:gravity="center"
                android:text="Plot\n" android:textSize="40dp"
                android:layout_gravity="right"
                android:layout_marginRight="5dp"
                android:background="#FF00FF00"
                android:id="@+id/graph_text"/>
            <!-- we add graph view to display -->
            <com.jjoe64.graphview.GraphView
                android:id="@+id/graph"
                android:layout_below="@+id/graph_text"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:title="y vs x"/>
            </RelativeLayout>
           </LinearLayout>
    </RelativeLayout>

</LinearLayout>