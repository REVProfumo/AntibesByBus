<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp" android:layout_gravity="top"
            android:text="number of columns"
            android:layout_marginRight="5dp"
            android:background="#FFFF0000"
            android:gravity="center"
            android:id="@+id/choice_here"/>

        <Button
            android:textSize="30dp"
            android:layout_weight=".2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:id="@+id/one"
            android:layout_below="@+id/choice_here"
            android:layout_alignParentLeft="true"
            android:onClick="Second_open"

            />

        <Button
        android:textSize="30dp"
            android:layout_weight=".2"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:id="@+id/two"
            android:layout_below="@+id/choice_here"
            android:onClick="Second_two_open"

            />

        <Button
            android:textSize="30dp"
            android:layout_weight=".2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:id="@+id/three"
            android:layout_below="@+id/choice_here"
            android:layout_alignParentRight="true"
            android:onClick="Second_three_open"

            />


</RelativeLayout>
